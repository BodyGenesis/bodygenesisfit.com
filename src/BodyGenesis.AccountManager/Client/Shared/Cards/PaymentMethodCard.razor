<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h5">@PaymentMethod.Type.ToDisplayText()</MudText>

            @if (PaymentMethod.Expires)
            {
                <MudText Typo="Typo.body1">Expires @PaymentMethod.ExpirationDate?.ToShortDateString()</MudText>
            }

        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        @if (!string.IsNullOrWhiteSpace(PaymentMethod.NameOnCard))
        {
            <MudText Typo="Typo.h6">@PaymentMethod.NameOnCard</MudText>
        }

        <MudText Typo="Typo.h6">@PaymentMethod.AccountNumberHint</MudText>

        @if (!string.IsNullOrWhiteSpace(PaymentMethod.RoutingNumber))
        {
            <MudText Typo="Typo.body1">@PaymentMethod.RoutingNumber</MudText>
        }

    </MudCardContent>
</MudCard>


@code
{
    [Parameter]
    public PaymentMethod PaymentMethod { get; set; } = new PaymentMethod();
}