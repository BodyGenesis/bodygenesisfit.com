@model Piranha.Extend.Blocks.QuoteBlock

<div class="block @Model.CssName() p-2">
    <div class="container">
        <blockquote class="blockquote">
            <p>@Model.Body</p>
            @if (!string.IsNullOrWhiteSpace(Model.Author))
            {
                <footer class="blockquote-footer">@Model.Author</footer>
            }
        </blockquote>
    </div>
</div>